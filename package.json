{
  "name": "create-rollup-project",
  "version": "0.0.1",
  "description": "Creates a skeleton project with Rollup configuration as well as some other useful goodies",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vjrasane/create-rollup-project.git"
  },
  "bugs": {
    "url": "https://github.com/vjrasane/create-rollup-project/issues"
  },
  "homepage": "https://github.com/vjrasane/create-rollup-project#readme",
  "author": "Ville Räsänen",
  "bin": {
    "create-rollup-project": "dist/main.js"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "format:pkg": "format-package -w",
    "lint": "node_modules/.bin/eslint .",
    "test": "standard && cross-env NODE_ENV=development jest --coverage",
    "watch": "cross-env NODE_ENV=development rollup -c -w"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "keywords": [
    "template",
    "rollup",
    "travis",
    "eslint",
    "husky",
    "standard",
    "bundling",
    "testing",
    "coveralls",
    "style",
    "jest",
    "babel"
  ],
  "standard": {
    "env": [
      "jest",
      "node"
    ],
    "ignore": [
      "flow-typed/**"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "deepmerge": "^2.1.1",
    "enquirer": "^2.0.0",
    "format-package": "^5.0.0",
    "fs-extra": "^7.0.0",
    "mustache": "^3.0.0",
    "parse-git-config": "^2.0.3",
    "prompt-checkbox": "^2.2.0",
    "prompt-confirm": "^2.0.4",
    "prompt-list": "^3.2.0",
    "tmp": "^0.0.33"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.80.0",
    "flow-typed": "^2.5.1",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "rollup": "^0.60.1",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-uglify": "^4.0.0",
    "standard": "^12.0.1"
  },
  "optionalDependencies": {
    "husky": "^1.0.0-rc.14"
  }
}
